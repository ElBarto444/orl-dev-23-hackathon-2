{% extends 'admin.html.twig' %}

{% block title %}Mobil index
{% endblock %}

{% block body %}

	{% include '_components/_dots.html.twig' %}


	<h1 class="text-center mt-5 fw-bold text-dark">Liste des smartphones en stock</h1>


	{% include '_components/_searchBar.html.twig'%}
	<div class="container">

		<table class="table">
			<thead>
				<tr>


					<th class="text-dark fw-bold">Marque</th>
					<th class="text-dark fw-bold">Modèle</th>
					<th class="text-dark fw-bold">Modification</th>
					<th class="text-dark fw-bold">Détail</th>

				</tr>
			</thead>
			<tbody>
				{% for mobil in mobils %}
					<tr>
						<td class="text-dark">{{ mobil.marque }}</td>


						<td class="text-dark">{{ mobil.modele }}</td>


						<td>
							<a class="btn btn-sm btn-primary text-light" href="{{ path('app_mobil_edit', {'id': mobil.id}) }}">
							<img src="{{ asset('build/images/pencil.svg') }}" width="20px">
							Modifier</a>
						</td>
						<td>
							<a class="btn btn-sm btn-danger text-light" href="{{ path('app_mobil_delete', {'id': mobil.id}) }}">
							<img src="{{ asset('build/images/cross.svg') }}" width="20px">
							Supprimer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucune entrée trouvée</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="container">

		<a class="btn btn-sm btn-success my-5 p-2 text-dark" href="{{ path('app_mobil_new') }}">Ajouter un nouveau smartphone</a>

	</div>
{% endblock %}
