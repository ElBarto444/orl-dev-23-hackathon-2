{% endblock %}

{% block body %}
	<h1 class="text-center">Liste des mobiles en stock</h1>
	<div class="container">
		<table class="table">
			<thead>
				<tr>

					<th>Marque</th>
					<th>Modele</th>
					<th>Modification</th>
