{% extends 'admin.html.twig' %}

{% block title %}Mobil index
{% endblock %}

{% block body %}

	{% include '_components/_dots.html.twig' %}


	<h1 class="text-center mt-5 fw-bold text-dark">Liste des smartphones en stock</h1>


	{% include '_components/_searchBar.html.twig'%}
	<div class="container">
		<div class="row">
			{% for mobil in mobils %}
				<div class="col-lg-4 col-md-6">
					<article class="rounded m-2 bg-white fw-medium">
						<img class="card-img-top rounded" src="{{ vich_uploader_asset(mobil) }}" alt="Card image cap">
						<div class="card-body p-3">
							<div class="container">
								<h5 class="card-title my-3 fw-bold text-dark">{{ mobil.marque }}-{{ mobil.modele }}</h5>
								<p class="card-text text-dark fw-bold">Taille écran
									{{ mobil.ecran }}
								</p>
								<p class="text-dark fw-bold">Mémoire
									{{ mobil.stockage }}</p>

								<p class="text-dark fw-bold">Réseau
									{{ mobil.reseau }}</p>

								<p class="text-dark fw-bold">RAM

									{{ mobil.RAM }}</p>
							</div>
							<a href="{{ path('app_mobil_show', {'id': mobil.id}) }}" class="btn btn-success d-flex justify-content-center my-4 mx-4">Détail
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search mx-2" viewbox="0 0 16 16">
									<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
								</svg>
							</a>

						</div>
					</article>

				</div>
			{% endfor %}
		</div>


		<div class="container">
			<a class="btn btn-sm btn-success my-5 p-2 text-dark" href="{{ path('app_mobil_new') }}">Ajouter un nouveau smartphone</a>
		</div>
	{% endblock %}
