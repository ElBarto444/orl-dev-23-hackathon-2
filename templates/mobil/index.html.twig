{% extends 'admin.html.twig' %}

{% block title %}Mobil index
{% endblock %}

{% block body %}

	{% include '_components/_dots.html.twig' %}


	<h1 class="text-center mt-5 fw-bold text-primary">Liste des smartphones en stock</h1>


	{% include '_components/_searchBar.html.twig'%}
	<div class="container">
		<div class="row">
			{% for mobil in mobils %}
				<div class="col-lg-4 col-md-6">
					<article class="rounded m-2 bg-white fw-medium">
						<img class="card-img-top rounded" src="{{ vich_uploader_asset(mobil) }}" alt="Card image cap">
						<div class="card-body p-3">
							<h5 class="card-title my-3 fw-bold">{{ mobil.marque }}-{{ mobil.modele }}</h5>
							<p class="card-text">Taille écran
								{{ mobil.ecran }}
							</p>
							<p></p>
							<p>Mémoire
								{{ mobil.stockage }}</p>
							<p>Réseau
								{{ mobil.reseau }}
								RAM
								{{ mobil.RAM }}</p>
							<a href="{{ path('app_mobil_show', {'id': mobil.id}) }}" class="btn btn-success">Détail</a>
						</div>
					</article>
				</div>
			{% endfor %}
		</div>
	</div>
</div>
<div class="container">
	<a class="btn btn-sm btn-success my-5 p-2 text-dark" href="{{ path('app_mobil_new') }}">Ajouter un nouveau smartphone</a>
</div>{% endblock %}
