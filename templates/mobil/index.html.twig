{% extends 'admin.html.twig' %}

{% block title %}Mobil index
{% endblock %}

{% block body %}

	{% include '_components/_dots.html.twig' %}


	<h1 class="text-center mt-5 fw-bold text-dark">Liste des smartphones en stock</h1>


	{% include '_components/_searchBar.html.twig'%}
	<div class="container">

		<table class="table">
			<thead>
				<tr>


					<th class="text-dark fw-bold">Marque</th>
					<th class="text-dark fw-bold">Modele</th>
					<th class="text-dark fw-bold">Modification</th>
					<th class="text-dark fw-bold">Détail</th>

				</tr>
			</thead>
			<tbody>
				{% for mobil in mobils %}
					<tr>
						<td class="text-dark">{{ mobil.marque }}</td>


						<td class="text-dark">{{ mobil.modele }}</td>


						<td>
							<a class="btn btn-sm btn-primary text-light" href="{{ path('app_mobil_edit', {'id': mobil.id}) }}">
								<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewbox="0 0 16 16">
									<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
									<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
								</svg>

								Modifier</a>
						</td>
						<td>
							<a class="btn btn-outline border-primary text-primary" href="{{ path('app_mobil_show', {'id': mobil.id}) }}">Voir les infos</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">Aucun appareil trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="container">

		<a class="btn btn-sm btn-success my-5 p-2 text-dark" href="{{ path('app_mobil_new') }}">Ajouter un nouveau smartphone</a>

	</div>
{% endblock %}
