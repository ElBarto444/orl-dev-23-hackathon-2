{% extends 'admin.html.twig' %}

{% block title %}Mobil index
{% endblock %}

{% block body %}
	{% include '_components/_dots.html.twig' %}


	<h1 class="text-center mt-5 fw-bold text-dark">Liste des smartphones en stock</h1>


	{% include '_components/_searchBar.html.twig'%}
	<div class="container">
		<table class="table">
			<thead>
				<tr>

					<th class="text-dark fw-bold">Marque</th>
					<th class="text-dark fw-bold">Modele</th>
					<th class="text-dark fw-bold">Modification</th>
					<th class="text-dark fw-bold">DÃ©tail</th>


				</tr>
			</thead>
			<tbody>
				{% for mobil in mobils %}
					<tr>
						<td class="text-dark">{{ mobil.marque }}</td>

						<td class="text-dark">{{ mobil.modele }}</td>

						<td>
							<a class="btn btn-primary" href="{{ path('app_mobil_edit', {'id': mobil.id}) }}">Modifier</a>
						</td>
						<td>
							<a class="btn btn-outline border-primary text-primary" href="{{ path('app_mobil_show', {'id': mobil.id}) }}">Voir les infos</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="6">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<div class="container">
		<a class="btn btn-sm btn-success my-5 p-2 text-dark" href="{{ path('app_mobil_new') }}">Ajouter</a>
	</div>
{% endblock %}
