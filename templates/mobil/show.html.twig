{% extends 'admin.html.twig' %}

{% block title %}Détails
{% endblock %}

{% block body %}
{% include '_components/_dots.html.twig' %}
<div class="container">
	<h1 class="my-5 fw-bold text-primary">Detail du mobile</h1>
		<table class="table">
			<tbody class="my-5">
				<tr class="my-5">
					<th class="my-5">Marque</th>
					<td class="my-5">{{ mobil.marque }}</td>
				</tr>
				<tr>
					<th>Modèle</th>
					<td>{{ mobil.modele }}</td>
				</tr>

<tr>
					<th>Taille écran</th>
					<td>{{ mobil.ecran }}</td>

				</tr>
				<tr>
					<th>RAM</th>
					<td>{{ mobil.RAM }}</td>
				</tr>
				<tr>
					<th>Stockage</th>
					<td>{{ mobil.stockage }}</td>
				</tr>
				<tr>
					<th>Réseau</th>
					<td>{{ mobil.reseau }}</td>
				<tr>
					<th>Catégorie</th>
					<td>{{ mobil.categoryName }}</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="container">
		<a class="btn btn-primary mt-3" href="{{ path('app_mobil_edit', {'id': mobil.id}) }}">Modifier</a>
		{{ include('mobil/_delete_form.html.twig') }}

		<a class="btn btn-success text-black mt-3" href="{{ path('app_mobil_index') }}">Retour à la liste</a>
	</div>
{% endblock %}
