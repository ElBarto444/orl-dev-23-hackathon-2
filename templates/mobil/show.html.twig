{% extends 'admin.html.twig' %}

{% block title %}Mobil
{% endblock %}

{% block body %}
{% include '_components/_dots.html.twig' %}
	<h1 class="text-center">Detail du mobile</h1>
	<div class="container">
		<table class="table">
			<tbody>
				<tr>
					<th>Marque</th>
					<td>{{ mobil.marque }}</td>
				</tr>
				<tr>
					<th>Modele</th>
					<td>{{ mobil.modele }}</td>
				</tr>

					<th>Taille écran</th>
					<td>{{ mobil.ecran }}</td>
				</tr>
				<tr>
					<th>RAM</th>
					<td>{{ mobil.RAM }}</td>
				</tr>
				<tr>
					<th>Stockage</th>
					<td>{{ mobil.stockage }}</td>
				</tr>
				<tr>
					<th>Réseau</th>
					<td>{{ mobil.reseau }}</td>
				<tr>
					<th>Catégorie</th>
					<td>{{ mobil.categoryName }}</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="container">
		<a class="btn btn-primary mt-3" href="{{ path('app_mobil_edit', {'id': mobil.id}) }}">Modifier</a>
		{{ include('mobil/_delete_form.html.twig') }}

		<a class="btn btn-outline border-primary text-primary mt-3" href="{{ path('app_mobil_index') }}">Retour à la liste</a>
	</div>
{% endblock %}
